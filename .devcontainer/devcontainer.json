{
  "name": "TechTok-FullStack-DevContainer",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": "false",
      "installGradle": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true,
      "installYarnUsingApt": true
    },
    "ghcr.io/mikaello/devcontainer-features/kotlinc:1": {}
  },
  "forwardPorts": [3000, 8080, 3306],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Frontend",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Spring Boot API",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL Database",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vmware.vscode-boot-dev-pack",
        "fwcd.kotlin",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "oven.bun-vscode"
      ],
      "settings": {
        "typescript.preferences.includePackageJsonAutoImports": "on",
        "bun.runtime": "/home/vscode/.bun/bin/bun",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "bash -c 'curl -fsSL https://bun.sh/install | bash && echo \"Bun installation completed\" && ls -la ~/.bun/bin/'",
  "postStartCommand": "bash -c 'echo \"Starting postStartCommand...\"; echo \"PATH: $PATH\"; if [ -f ~/.bun/bin/bun ]; then echo \"Bun found at ~/.bun/bin/bun\"; else echo \"Bun not found\"; fi; if [ -d \"/workspace/frontend\" ]; then echo \"Frontend directory found\"; cd /workspace/frontend && ~/.bun/bin/bun install; else echo \"Frontend directory not found at /workspace/frontend\"; ls -la /workspace/; fi'"
}
